<Window x:Class="Sploosh.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sploosh"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="220" Width="200">
    <Grid>
        <StackPanel Margin="10" VerticalAlignment="Center">

            <Button x:Name="helpButton" Margin="0 0 0 10"  
                    Height="50" Width="100"
                    Content="Help"/>

            <Button x:Name="aboutButton" Margin="0 0 0 10"  
                    Height="50" Width="100"
                    Content="About"/>

            <Button x:Name="quitButton"  
                    Height="50" Width="100"
                    Content="Quit"/>

        </StackPanel>



    </Grid>
</Window>
